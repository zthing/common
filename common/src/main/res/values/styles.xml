<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Dialog_Default" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--<item name="android:windowFrame">@null</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->
        <item name="android:windowIsFloating">true</item>       <!-- 对话框是否浮动 -->
        <item name="android:windowContentOverlay">@null</item>  <!-- 对话框是否有遮盖 -->
        <item name="android:windowFullscreen">true</item>       <!-- 设置全屏 -->
    </style>

    <style name="Grid_Item_Normal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#646464</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">1dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="layout_columnWeight">1</item>
        <item name="layout_rowWeight">1</item>
        <item name="layout_gravity">fill</item>
    </style>

    <style name="Grid_Item_Normal.End" parent="Grid_Item_Normal">
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
    </style>

    <style name="Grid_Item_Normal.Bottom" parent="Grid_Item_Normal">
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="Grid_Item_Normal.Over" parent="Grid_Item_Normal">
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
    </style>

    <style name="Edit_Ip">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/shape_frame_corners2_e0</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:padding">10dp</item>
        <item name="android:selectAllOnFocus">true</item>
        <item name="android:textIsSelectable">true</item>
        <item name="android:textSize">18sp</item>
    </style>
</resources>
