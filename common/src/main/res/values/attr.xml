<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="GridLayoutKeyBoard_Layout">
        <attr name="inputText" format="string"/> <!--输入文字-->
        <attr name="keyType"><!--点击输入类型-->
            <enum name="TYPE_NONE" value="0"/>      <!--什么都不干-->
            <enum name="TYPE_TEXT" value="1"/>      <!--文本末尾添加文字-->
            <enum name="TYPE_DELETE" value="2"/>    <!--删除-->
            <enum name="TYPE_CLEAR" value="3"/>     <!--清除-->
            <enum name="TYPE_REPLACE" value="4"/>   <!--替换整个输入框-->
            <enum name="TYPE_CUSTOM" value="5"/>    <!--返回点击事件自定义操作-->
        </attr>
    </declare-styleable>

    <declare-styleable name="GridLayoutKeyBoard">
        <attr name="inputView" format="reference"/> <!--输入视图的 ID-->
    </declare-styleable>

    <attr name="common_enabledCornerClip" format="boolean"/>
    <attr name="common_cornerRadius" format="dimension"/>
    <attr name="common_cornerRadiusTL" format="dimension"/>
    <attr name="common_cornerRadiusTR" format="dimension"/>
    <attr name="common_cornerRadiusBL" format="dimension"/>
    <attr name="common_cornerRadiusBR" format="dimension"/>
    <attr name="common_strokeWidth" format="dimension"/>
    <attr name="common_strokeColor" format="color"/>
    <attr name="common_strokeColorPress" format="color"/>
    <attr name="common_backgroundColor" format="color"/>
    <attr name="common_backgroundColorPress" format="color"/>
    <attr name="common_enabledRipple" format="boolean"/>
    <attr name="common_elevation" format="dimension"/>

    <declare-styleable name="CommonViewDelegate">
        <attr name="common_enabledCornerClip"/>
        <attr name="common_cornerRadius"/>
        <attr name="common_cornerRadiusTL"/>
        <attr name="common_cornerRadiusTR"/>
        <attr name="common_cornerRadiusBL"/>
        <attr name="common_cornerRadiusBR"/>
        <attr name="common_strokeWidth"/>
        <attr name="common_strokeColor"/>
        <attr name="common_strokeColorPress"/>
        <attr name="common_backgroundColor"/>
        <attr name="common_backgroundColorPress"/>
        <attr name="common_enabledRipple"/>
        <attr name="common_elevation"/>
    </declare-styleable>

    <declare-styleable name="ImageView">
        <attr name="common_enabledCornerClip"/>
        <attr name="common_cornerRadius"/>
        <attr name="common_cornerRadiusTL"/>
        <attr name="common_cornerRadiusTR"/>
        <attr name="common_cornerRadiusBL"/>
        <attr name="common_cornerRadiusBR"/>
        <attr name="common_strokeWidth"/>
        <attr name="common_strokeColor"/>
        <attr name="common_strokeColorPress"/>
        <attr name="common_backgroundColor"/>
        <attr name="common_backgroundColorPress"/>
        <attr name="common_enabledRipple"/>
        <attr name="common_elevation"/>
    </declare-styleable>
</resources>